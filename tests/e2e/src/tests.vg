<view name="NestedFor">
  <div className="container">
    <div className="controls">
      <button onclick={addFoo}>+ Add Foo</button>
      <button onclick={addBar}>+ Add Bar</button>
    </div>
    <div className="flex-column">
      <for seq={foos} as="foo">
        <div className="flex">
          <for seq={bars} as="bar">
            <div id="{foo}{bar}" className="card">{foo} - {bar}</div>
          </for>
        </div>
      </for>
    </div>
  </div>
</view>

<view name="Counter">
  <div className="container">
    <div className="display">Count: { numberToString(count) }</div>
    <div className="controls">
      <button onclick={increment}>+ Increment</button>
      <button onclick={decrement}>- Decrement</button>
    </div>
  </div>
</view>

<view name="Component">
  <div className="container">
    <div className="grid">
      <mount use={counter} />
      <mount use={counter} />
    </div>
    <div className="highlight">
      Total Count: { numberToString(total) }
    </div>
  </div>
</view>

<view name="IfTest">
  <div className="container">
    <div className="controls">
      <button onclick={toggle}>Toggle</button>
    </div>
    <div className="display">
      <if condition={show}>
        <then><div id="shown">Now you see me! {a.b.c}</div></then>
        <else><div id="hidden">Now you don't! {x.y.z}</div></else>
      </if>
    </div>
  </div>
</view>

<view name="SwitchTest">
  <div className="container">
    <button onclick={toggleHandler}>Toggle</button>
    <switch on={example}>
      <case name="a">
        <div>{a.foo}</div>
      </case>
      <case name="b">
        <div>{b.bar}</div>
      </case>
      <case name="c">
        <div>{c.baz | numberToString }</div>
      </case>
    </switch>
  </div>
</view>
