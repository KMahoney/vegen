{
  "comments": {
    "blockComment": ["<!--", "-->"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["<", ">"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*<!--\\s*#region\\b.*-->",
      "end": "^\\s*<!--\\s*#endregion\\b.*-->"
    }
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*<([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*<\\/\\1>)|<!--(?!.*-->)|\\{[^}\"']*$",
    "decreaseIndentPattern": "^\\s*(<\\/[-_\\.A-Za-z0-9]+\\b[^>]*>|-->|\\})"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*<([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>[^<]*$",
      "afterText": "^\\s*<\\/\\1>",
      "action": {
        "indent": "indentOutdent",
        "appendText": "\n"
      }
    },
    {
      "beforeText": "^\\s*<([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*<\\/\\1>)[^<]*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*<!--.*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*-->.*$",
      "action": {
        "indent": "indentOutdent"
      }
    },
    {
      "beforeText": "^\\s*\\{[^}]*$",
      "action": {
        "indent": "indent"
      }
    },
    {
      "beforeText": "^\\s*\\}[^}]*$",
      "action": {
        "indent": "indentOutdent"
      }
    }
  ]
}
